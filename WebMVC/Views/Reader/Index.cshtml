@model List<Application.ViewModels.ReaderViewModel>

<div class="row">
    <a class="btn btn-primary" asp-controller="Reader" asp-action="AddOrEdit">Add new</a>
</div>
<div class="row">
    <table id="readers" class="table table-bordered table-hover">
        <thead>
            <tr class="">
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Created On</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reader in Model)
            {
                <tr style="height: 60px;">
                    <td>@reader.FullName</td>
                    <td>@reader.Email</td>
                    <td>@reader.PhoneNumber</td>
                    <td>@reader.CreatedOn.ToLocalTime()</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Reader" asp-action="AddOrEdit" asp-route-id="@reader.Id">Edit</a>
                        <a class="btn btn-info" asp-controller="Reader" asp-action="LoanBook" asp-route-id="@reader.Id">Loan</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>